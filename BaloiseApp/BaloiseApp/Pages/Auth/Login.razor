@page "/login"

@using Microsoft.AspNetCore.Components.Forms

<h3>Authentification</h3>

<EditForm OnValidSubmit="@submit" Model="@model">
    <DataAnnotationsValidator />

   <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <InputText @bind-Value="model.Email" class="form-control" id="staticEmail" />
            <ValidationMessage For="@(() => model.Email)" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="staticPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <InputText @bind-Value="model.Password" class="form-control" id="staticPassword" />
            <ValidationMessage For="@(() => model.Password)" />
        </div>
    </div>
   
    <div>
        <button class="btn btn-primary" type="submit">Se connecter</button>
    </div>
</EditForm>


@code {
    private LoginViewModel model = new();

    private async void submit()
    {
        Console.WriteLine(model.Email);
    }


}
